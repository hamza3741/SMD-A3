<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#1EBBD3"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/arrow_back22"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/Ali1"
                android:contentDescription="Back Arrow"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#1EBBD3"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="120dp">

            <ImageView
                android:id="@+id/profileIconImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/profile" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="530dp"
            tools:ignore="MissingConstraints"
            android:background="#C1DBDF"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="200dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginStart="20dp"
                android:text="Name"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:hint="Enter Name"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/TextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="130dp"
                android:text="Email"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:hint="Enter Email"
                android:background="#FFFFFF"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/TextName"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/TextContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/editTextEmail"
                android:text="Contact Number"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editContact"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:hint="Enter Contact Number"
                android:background="#FFFFFF"
                android:inputType="phone"
                android:layout_below="@+id/TextContact"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/TextCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/editContact"
                android:text="Country"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerCountry"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_below="@+id/TextCountry"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:prompt="@string/select_country_hint"/>

            <TextView
                android:id="@+id/TextCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/spinnerCountry"
                android:text="City"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerCity"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_below="@+id/TextCity"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:background="#FFFFFF"
                android:prompt="@string/select_city_hint"/>

            <Button
                android:id="@+id/UpdateProfile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerCity"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:backgroundTint="#2196F3"
                android:text="Update Profile"
                android:textColor="@color/white" />

        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
